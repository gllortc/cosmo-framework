<?xml version="1.0" encoding="UTF-8"?>

<report cdt-ver="1.0">

   <name>Weather report</name>
   <author>Gerard Llort</author>
   <version>1.0</version>
   <copyright>InforGEST</copyright>
   <description>Based on ZOHO Invoice Template.</description>

   <dataquery id="weather" connection="cosmo.server">
      SELECT id, 
             city,
             temp_lo,
             temp_hi,
             prcp
      FROM weather
      ORDER BY city
   </dataquery>

   <header>
&lt;!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"&gt;

&lt;html xmlns="http://www.w3.org/1999/xhtml" style="display: block;"&gt;

&lt;head&gt;
&lt;meta http-equiv="Content-Type" content="text/html; charset=UTF-8" /&gt;
&lt;title&gt;Cosmo Reports - Weather Report Sample&lt;/title&gt;
&lt;/head&gt;

&lt;body&gt;
   &lt;h1&gt;Weather Report&lt;/h1&gt;
   </header>

   <detail id="invoice-products" dataquery="weather">

      <detail-head>
         &lt;table style="width: 100%;" border="1" cellspacing="2" cellpadding="2"&gt;
            &lt;tbody&gt;
            &lt;tr&gt;
               &lt;td&gt;&lt;span class="bold"&gt;ID&lt;/span&gt;&lt;/td&gt;
               &lt;td&gt;&lt;span class="bold"&gt;City&lt;/span&gt;&lt;/td&gt;
               &lt;td&gt;&lt;span class="bold"&gt;Low temp&lt;/span&gt;&lt;/td&gt;
               &lt;td&gt;&lt;span class="bold"&gt;High temp&lt;/span&gt;&lt;/td&gt;
               &lt;td&gt;&lt;span class="bold"&gt;Precip&lt;/span&gt;&lt;/td&gt;
            &lt;/tr&gt;
      </detail-head>

      <detail-row>
            &lt;tr&gt;
               &lt;td&gt;[@ROWVALUE id]&lt;/td&gt;
               &lt;td&gt;[@ROWVALUE city]&lt;/td&gt;
               &lt;td&gt;[@ROWVALUE temp_lo]&lt;/td&gt;
               &lt;td&gt;[@ROWVALUE temp_hi]&lt;/td&gt;
               &lt;td&gt;[@ROWVALUE prcp]&lt;/td&gt;
            &lt;/tr&gt;
      </detail-row>

      <detail-foot>
            &lt;/tbody&gt;
         &lt;/table&gt;
      </detail-foot>

   </detail>

   <footer>
&lt;/body&gt;
&lt;/html&gt;
   </footer>

</report>